#!/bin/bash

alias diff='git diff --no-index'
alias l='ls -Flh'
alias ll='ls -Flha'
alias t='tree -h -I "*.venv|*.pyc|__pycache__|*.egg-info|node_modules|vendor|.git|go"'
alias tt='t -a'
alias tx='tmux new-session -ADs ${PWD##*/}'

# Git aliases.
alias g='git status'
alias gt='git status'
alias gts='git status --short'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdcs='git diff --cached --stat'
alias gds='git diff --stat'
alias gl='git log'
alias glg='git log --graph'
alias glgo='git log --graph --oneline'
alias glp='git log --patch'
alias gls='git log --stat'
alias gs='git show'
alias gss='git show --stat'
alias ga='git add'
alias gaa='git add --all'
alias gap='git add --patch'
alias gc='git commit'
alias gcm='git commit --message'
alias gch='git commit --amend'
alias gchn='git commit --amend --no-edit'
alias gchm='git commit --amend --message'
alias gca='git commit --all'
alias gcam='git commit --all --message'
alias gcah='git commit --all --amend'
alias gcahn='git commit --all --amend --no-edit'
alias gcahm='git commit --all --amend --message'
alias gp='git push'

incognito () { cognito off; }
cognito () {
  case ${1:-on} in
    (on)  [[ -z $HISTFILE ]] && HISTFILE="$HISTFILE__" && unset HISTFILE__;;
    (off) [[ -z $HISTFILE__ ]] && HISTFILE__="$HISTFILE" && unset HISTFILE;;
  esac
}
