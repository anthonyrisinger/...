#!/bin/bash

alias diff='command diff --color -u'
alias l='ls -Flh'
alias ll='ls -Flha'
alias t='tree -I "*.pyc|__pycache__|*.egg-info"'

pruno () {
    oc adm prune builds --orphans --keep-complete=1 --keep-failed=1 --keep-younger-than=1h --confirm
    oc adm prune builds --orphans --keep-complete=0 --keep-failed=0 --keep-younger-than=72h --confirm
    oc adm prune deployments --orphans --keep-complete=1 --keep-failed=1 --keep-younger-than=1h --confirm
    oc adm prune deployments --orphans --keep-complete=0 --keep-failed=0 --keep-younger-than=72h --confirm
}
