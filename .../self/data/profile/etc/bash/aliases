#!/bin/bash

alias diff='command diff --color -u'
alias l='ls -Flh'
alias ll='ls -Flha'
alias t='tree -h -I "*.venv|*.pyc|__pycache__|*.egg-info|node_modules|vendor|.git|go"'
alias tt='t -a'

# Git aliases.
alias g='git status'
alias gs='git show --stat'
alias gss='git show'
alias gd='git diff --stat'
alias gdd='git diff'
alias gdc='git diff --cached --stat'
alias gdcc='git diff --cached'
alias gl='git log --stat'
alias gll='git log --patch'
alias gg='git log --graph --oneline'

incognito () { cognito off; }
cognito () {
  case ${1:-on} in
    (on)  [[ -z $HISTFILE ]] && HISTFILE="$HISTFILE__" && unset HISTFILE__;;
    (off) [[ -z $HISTFILE__ ]] && HISTFILE__="$HISTFILE" && unset HISTFILE;;
  esac
}
