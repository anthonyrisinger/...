# Otherwise readline prevents remapping keys the terminal driver has already mapped.
set bind-tty-special-chars off
# Faster ^[ timeout.
set keyseq-timeout 200

"\C-w": backward-kill-word
"\e[5~": history-search-backward
"\e[6~": history-search-forward
"\e[1;3A": upcase-word
"\e[1;3B": downcase-word
"\e[1;9A": upcase-word
"\e[1;9B": downcase-word
